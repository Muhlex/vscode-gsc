{
	"name": "vscode-gsc",
	"version": "0.0.1",
	"author": {
		"name": "murlis"
	},
	"license": "MIT",
	"repository": "github:Muhlex/vscode-gsc",
	"displayName": "GSC (Call of Duty)",
	"description": "Language support for different GSC (game script) versions.",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"type": "module",
	"scripts": {
		"vscode:prepublish": "npm run build && npm run compile",
		"build": "tsx build/ --api https://muhlex.github.io/gsc-doc/ --engine iw3 --engine iw4",
		"compile": "tsc -p .",
		"watch": "tsc -watch -p .",
		"check": "biome check",
		"fix": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/glob": "^8.1.0",
		"@types/node": "^22.9.0",
		"@types/vscode": "^1.95.0",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3"
	}
}
