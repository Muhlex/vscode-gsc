{
	"usage": "weaponClass(<weapon>)",
	"description": [
		"Returns the class of weapon that this weapon is, such as \"rifle\", \"smg\", \"spread\", \"pistol\", etc."
	],
	"params": [
		{
			"name": "weapon",
			"types": ["string"],
			"description": [
				"The weapon name."
			],
			"optional": false
		}
	],
	"return": {
		"types": ["string"]
	},
	"example": [
		"if (weaponClass(\"m16_basic\") == \"rifle\") {\n  // Code\n}"
	]
}
