{
	"usage": "vectorFromLineToPoint(<segment A>, <segment B>, <P>)",
	"description": [
		"Given a line and a point P, this returns a vector perpendicular to the line and pointing from the line to P."
	],
	"params": [
		{
			"name": "segment A",
			"types": ["Vector3"],
			"description": [
				"One point on the line."
			],
			"optional": false
		},
		{
			"name": "segment B",
			"types": ["Vector3"],
			"description": [
				"Other point on the line."
			],
			"optional": false
		},
		{
			"name": "P",
			"types": ["Vector3"],
			"description": [
				"The point."
			],
			"optional": false
		}
	],
	"return": {
		"types": ["Vector3"]
	},
	"example": [
		"vec = vectorFromLineToPoint(a, b, p);"
	]
}
