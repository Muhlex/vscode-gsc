{
	"usage": "<entity> vehForceMaterialSpeed(<force>, <speed>)",
	"description": [
		"Force treads to scroll as if the vehicle was moving at the given speed."
	],
	"params": [
		{
			"name": "force",
			"types": ["bool"],
			"description": [
				"Boolean value, true if treads should be force to move."
			],
			"optional": false
		},
		{
			"name": "speed",
			"types": ["int"],
			"description": [
				"Speed to move treads at."
			],
			"optional": true
		}
	],
	"example": [
		"animatedTank vehForceMaterialSpeed(true, 20);\nanimatedTank vehForceMaterialSpeed(false);"
	]
}
