{
	"usage": "<entity> animRelative(<notify>, <origin>, <angles>, <animation>, <mode>, <root>)",
	"description": [
		"Runs an animscript on an entity."
	],
	"params": [
		{
			"name": "notify",
			"types": ["string"],
			"description": [
				"The notify to send."
			],
			"optional": false
		},
		{
			"name": "origin",
			"types": ["Vector3"],
			"description": [
				"The starting position of the anim script."
			],
			"optional": false
		},
		{
			"name": "angles",
			"types": ["Vector3"],
			"description": [
				"The starting angle of the anim script."
			],
			"optional": false
		},
		{
			"name": "animation",
			"types": ["animation"],
			"description": [
				"The animation."
			],
			"optional": false
		},
		{
			"name": "mode",
			"types": ["string"],
			"description": [
				"Valid modes are \"normal\" and \"deathplant\"."
			],
			"optional": true
		},
		{
			"name": "root",
			"types": ["animation"],
			"description": [
				"The root animation."
			],
			"optional": true
		}
	],
	"example": [
		"driver animRelative(\"germantruck_driver_closedoor\", org , angles, driver.closedooranim);"
	]
}
