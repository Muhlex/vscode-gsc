{
	"usage": "target_isInCircle(<target entity>, <player>, <fov>, <radius>)",
	"description": [
		"Returns whether a target is within a given radius from the center of the player's screen."
	],
	"params": [
		{
			"name": "target entity",
			"types": ["Entity"],
			"description": [
				"The entity that is the target."
			],
			"optional": false
		},
		{
			"name": "player",
			"types": ["Entity"],
			"description": [
				"The player entity."
			],
			"optional": false
		},
		{
			"name": "fov",
			"types": ["int"],
			"description": [
				"The player's field of view."
			],
			"optional": false
		},
		{
			"name": "radius",
			"types": ["int"],
			"description": [
				"Radius of the circle, centered at the center of the screen."
			],
			"optional": false
		}
	],
	"return": {
		"types": ["bool"]
	},
	"example": [
		"if (target_isInCircle(enemyChopper, level.player, 65, 100)) {\n  // Code\n}"
	]
}
