{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"eqeqeq": "warn",
		"no-throw-literal": "warn",
		"semi": "warn",
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"quotes": ["warn", "double"]
	},
	"ignorePatterns": [
		"**/*.d.ts"
	]
}
